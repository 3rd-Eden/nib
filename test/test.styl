
@import 'nib/vendor'

gray = #ebebeb

body
  padding: 50px

table
  border-collapse: collapse
  td
    padding: 3px 10px
    border-left: 1px solid #eee
    &:first-child
      font: 12px helvetica, arial
  tr:nth-child(4n)
    border-bottom: 1px solid #eee
    td
      padding-bottom: 15px
  tr:nth-child(4n+1)
    td
      padding-top: 15px

h2
  background: red
  padding 5px
  border-radius: left 10px